<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", :autofocus => true, :id => "micropost_content", onkeyup: "countChars(this)" %>
  </div>
  <%= hidden_field_tag :charcount, "#{@charcount}" %>
	<div class="clearfix">
		<%= f.submit "Post", class: "btn btn-small btn-primary pull-right" %>

		<span id="char_count" class="muted pull-right inline"><%= @charcount %></span>
	
	</div>
<% end %>